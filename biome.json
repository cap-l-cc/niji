{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": [".devcontainer/*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules/**/*"],
    "rules": {
      "all": true
    }
  },
  "overrides": [
    {
      "include": ["src/types.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          },
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    }
  ]
}
