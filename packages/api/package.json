{
  "name": "niji-api",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify src/index.ts",
    "lint": "bunx @biomejs/biome check ./src",
    "lint:fix": "bun run lint --apply",
    "migration": "run-s migration:com migration:gen migration:run",
    "migration:gen": "drizzle-kit generate:sqlite --schema src/schema.ts --out migrations",
    "migration:run": "wrangler d1 migrations apply niji-db --local",
    "migration:run:prod": "wrangler d1 migrations apply niji-db"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.6"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20231218.0",
    "drizzle-kit": "^0.20.13",
    "npm-run-all": "^4.1.5",
    "wrangler": "^3.25.0"
  }
}
